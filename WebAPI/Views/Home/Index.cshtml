@{
    ViewData["Title"] = "Home Page";
}

<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="insert-tab" data-toggle="tab" href="#insert" role="tab" aria-controls="insert" aria-selected="true">Insert</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#delete" role="tab" aria-controls="profile" aria-selected="false">Delete</a>
    </li>
</ul>
<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="insert" role="tabpanel" aria-labelledby="insert-tab">
        <div class="container ">
            <form asp-controller="Home" asp-action="CallAPI" method="post">
                <div class="col-md-12 row">
                    <div class="col-md-6">
                        <label>Nome</label>
                        <input name="nome" class="form-control" type="text">
                    </div>
                    <div class="col-md-6">
                        <label>Sobrenome</label>
                        <input name="sobrenome" class="form-control" type="text">
                    </div>
                </div>
                <div class="col-md-12 row">
                    <div class="col-md-8">
                        <label>Cargo</label>
                        <input name="cargo" class="form-control" type="text">
                    </div>
                    <div class="col-md-4">
                        <label>Salario</label>
                        <input name="salario" class="form-control" type="number">
                    </div>
                </div>
                <div style="text-align:center;padding-top: 10px">
                    <button class="btn-primary btn" type="submit" style="width:100px" name="Salvar">Salvar</button>
                </div>
            </form>
        </div>
    </div>

    <div class="tab-pane fade" id="delete" role="tabpanel" aria-labelledby="delete-tab">
        <div class="col-md-12 row">
            <div class="col-md-6">
                <label>Digite o Id desejado para Deletar</label>
                <input name="IdDelete" class="form-control" type="text">
            </div>
        </div> 
    </div>

</div>